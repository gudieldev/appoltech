<div class="container">
	<div class="section-title badge bg-danger">
		<h3 class="display-6">{{ section.settings.section_heading }}</h3>
	</div><!-- /.section-title -->
	<div class="row">
		{% for block in section.blocks %}
			{% case block.type %}
				{% when 'question' %}
					<div class="col-12 col-sm-6 col-md-4">
						{% unless block.settings.question_url == blank %}
						<a href="{{ block.settings.question_url }}">
						{% endunless %}
							<div class="question">
								{{ block.settings.question_image | img_url: 'medium' | img_tag: '' }}
							</div><!-- /.question -->
						{% unless block.settings.question_url == blank %}
						</a><!-- /a -->
						{% endunless %}
					</div><!-- /.col -->
			{% endcase %}
		{% endfor %}
	</div><!-- /.row -->
</div><!-- /.container -->

{% schema %}
{
	"name": "FAQs :)",
	"tag": "section",
	"settings": [
		{
			"type": "text",
			"id": "section_heading",
			"label": "Section Heading"
		}
	],
	"blocks": [
		{
			"name": "Question",
			"type": "question",
			"settings": [
				{
					"type": "image_picker",
					"id": "question_image",
					"label": "Image"
				},
				{
					"type": "url",
					"id": "question_url",
					"label": "Question Link",
					"info": "Link to more details for this question"
				}
			]
		}
	],
	"max_blocks": 3
}
{% endschema %}