<div class="container">
	<div class="featured-slider-wrapper">
		<div class="featured-slider">
			{% for block in section.blocks %}
				{% case block.type %}
					{% when 'slide' %}
					<div class="slide-item">
						{{ block.settings.image | img_url: 'master' | img_tag: '', 'd-block w-100' }}
						<div class="slide-item__caption">
							<h5>{{ block.settings.slide_title }}</h5>
							<p>{{ block.settings.slide_description }}</p>
						</div><!-- /.slide-item__caption -->
					</div><!-- /.slide-item -->
				{% endcase %}
			{% endfor %}
		</div><!-- /.featured-carousel -->
		{% if section.settings.show_indicators == true %}
			<div class="featured-slider__indicators"></div>
		{% endif %}
		{% if section.settings.show_arrows == true %}
		<div class="carousel-controls">
			<div class="carousel-control control-prev"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/></svg></div>
			<div class="carousel-control control-next"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/></svg></div>
		</div><!-- /.carousel-controls -->
		{% endif %}
	</div><!-- /.featured-slider-wrapper -->
</div><!-- /.container -->

{% schema %}
{
	"name": "Custom Slick Slider",
	"tag": "section",
	"class": "custom-slick-slider",
	"settings": [
		{
			"type": "checkbox",
			"id": "show_arrows",
			"label": "Show Arrows",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_indicators",
			"label": "Show Indicators (Dots)",
			"default": true
		}
	],
	"blocks": [
		{
			"name": "Slide",
			"type": "slide",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Slide Image"
				},
				{
					"type": "text",
					"id": "slide_title",
					"label": "Slide Title"
				},
				{
					"type": "richtext",
					"id": "slide_description",
					"label": "Slide Description"
				}
			]
		}
	]
}
{% endschema %}