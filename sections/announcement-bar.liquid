					},
					{
						"value": "success",
						"label": "Success"
					},
					{
						"value": "danger",
						"label": "Danger"
					},
					{
						"value": "warning",
						"label": "Warning"
					},
					{
						"value": "info",
						"label": "Info"
					},
					{
						"value": "light",
						"label": "Light"
					},
					{
						"value": "dark",
						"label": "Dark"
					}
				],
